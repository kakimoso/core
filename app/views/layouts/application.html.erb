  <div id="page-wrapper">
    <div class="container-fluid">
      <div class="row" id="main">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
