<% provide(:title, @project.name) %>
<% provide(:header, render('shared/project_header')) %>
  <div class="col-md-10 col-md-offset-1">
    <h1><%= "#{@project.name} / Project Members" %></h1>
    <div class="right">
      <%= link_to 'メンバー招待', project_members_new_path, class: 'btn btn-primary', id: 'invite-button' %>
    </div>
    <hr>
  </div>
<!--application.html.erbからのdiv.rowを閉じる-->
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <h1>Users#index</h1>
    <ul>
      <% @participants.each do |p| %>
        <div class="dropdown">
          <li><a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= "#{p.name}" %> <b class="caret"></b>
          </a>
            <ul class="dropdown-menu">
              <li><%= link_to "マイページ / #{p.name}", '#' %></li>
              <li><%= link_to "プロジェクト一覧", projects_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        </div>
      <% end %>
    </ul>
  </div>
<!--div.rowの閉じタグはapplication.html.erbにある-->
