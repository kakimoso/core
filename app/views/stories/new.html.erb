<% provide(:title, @project.name) %>
<% provide(:header, render('shared/project_header')) %>
<div class="col-xs-2" id="sidebar">
  <%= render 'shared/sidebar' %>
</div>
<div class="col-xs-10" id="project-main">
  <div class="col-md-6">
    <h1>新規ストーリー</h1>
    <%= form_for @new_story, url: project_stories_path, method: 'post' do |f| %>
      <%= f.label 'タイトル' %>
      <%= f.text_field :title, class: 'form-control', presence: true %>
      <%= f.label '内容' %>
      <%= f.text_area :description, class: 'form-control', rows: '10' %>
      <%= f.label '重要度' %>
      <%= f.collection_select :importance, @ordered_stories, :id, :title, class: 'form-control' %>

      <br>
      <%= f.submit '作成', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
